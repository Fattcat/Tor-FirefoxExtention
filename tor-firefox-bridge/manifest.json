{
  "manifest_version": 2,
  "name": "Tor Firefox Bridge",
  "version": "1.0",
  "description": "Toggle Firefox connection through the Tor network.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "proxy",
    "storage",
    "tabs",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_popup": "popup.html"
  }
}
