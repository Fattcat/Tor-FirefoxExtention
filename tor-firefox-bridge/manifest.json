{
  "manifest_version": 2,
  "name": "Tor Firefox Bridge",
  "version": "1.0",
  "description": "Pripoj alebo odpoj Firefox od Tor siete.",
  "permissions": [
    "proxy",
    "storage",
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
